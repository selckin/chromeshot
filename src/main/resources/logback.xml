<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-20(%8relative %16([%.14thread])) %-5level %35.35logger{35} - %msg%n%rEx</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="com.github.kklisura" level="info"/>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>
</configuration>
